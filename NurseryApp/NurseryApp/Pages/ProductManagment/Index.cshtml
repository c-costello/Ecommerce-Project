@page
@using NurseryApp.Models.Interfaces

@inject IInventory InventoryManager
    ViewData["Title"] = "ProductManagement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    var products = await InventoryManager.GetAllProducts();
}
<h1>ProductManagement</h1>
<table>
    <thead>
         <tr>
             <th>Name</th>
            <th>Description</th>
             <th>Plant Type</th>
            <th>Quantity</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
         </tr>   
    </thead>
    <tbody>
        @foreach (var product in products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Type</td>
                <td>@product.Quantity</td>
                <td><a asp-page="/Manage" asp-route-id="@product.ID"></a></td>
            </tr>            
        }
        

    </tbody>
</table>
    


