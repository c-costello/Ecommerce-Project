@model IEnumerable<NurseryApp.Models.ViewModel.BasketProductViewModel>

@foreach (var item in @Model)
{
    <div>
        @item.Name
        @item.Description
        @item.Price
        <form asp-action="Index" method="POST">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="@item.ProductID" id="id" name="id" value="@item.ProductID" />
            <label for="quantity"></label>
            <input type="number" asp-for="@item.Quantity" id="quantity" name="quantity" value="@item.Quantity" />
            <span asp-validation-for="@item.Quantity"></span>
            <button type="submit"> Submit</button>
        </form>
    </div>
}
